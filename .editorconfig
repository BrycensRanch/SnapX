root = true

[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
indent_size = 4
dotnet_style_readonly_field = true:silent
dotnet_style_object_initializer = true:silent
dotnet_style_collection_initializer = true:silent
dotnet_style_prefer_inferred_anonymous_type_member_names = true:silent
dotnet_naming_rule.non_field_members_should_be_pascal_case.severity = silent
dotnet_naming_rule.non_field_members_should_be_pascal_case.symbols = non_field_members
dotnet_naming_symbols.non_field_members.applicable_kinds = *
dotnet_naming_rule.non_field_members_should_be_pascal_case.style = pascal_case
dotnet_naming_style.pascal_case.capitalization = pascal_case
csharp_prefer_braces = false
csharp_prefer_simple_using_statement = true
resharper_csharp_blank_lines_after_file_scoped_namespace_directive = 1
resharper_csharp_namespace_body = file_scoped
csharp_style_namespace_declarations = file_scoped:warning



# You will comply or be DESTROYED.
csharp_style_var_elsewhere = true
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
dotnet_sort_system_directives_first = true


# IDE0051: Remove unused private member
dotnet_diagnostic.IDE0051.severity = silent
# IDE0005: Remove dead imports
dotnet_diagnostic.IDE0005.severity = warning


# Xml project files
[*.{csproj,vcxproj,vcxproj.filters,proj,nativeproj,locproj}]
indent_size = 2

# Xml build files
[*.builds]
indent_size = 2

# Xml files
[*.{xml,stylecop,resx,ruleset}]
indent_size = 2

# Xml config files
[*.{props,targets,config,nuspec}]
indent_size = 2

# For building on Windows using NUKE
[*.{cmd,ps1}]
end_of_line = crlf
